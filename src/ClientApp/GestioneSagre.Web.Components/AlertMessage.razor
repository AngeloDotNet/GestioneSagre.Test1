@using MudBlazor
@inject ISnackbar Snackbar

@if (!string.IsNullOrWhiteSpace(tipoAlert))
{
    @switch (tipoAlert)
    {
        case "error":
            Snackbar.Add($"{testo}", Severity.Error);
            break;

        case "info":
            Snackbar.Add($"{testo}", Severity.Info);
            break;

        case "warning":
            Snackbar.Add($"{testo}", Severity.Warning);
            break;

        case "confirm":
            Snackbar.Add($"{testo}", Severity.Success);
            break;
    }
}

@code {
    [Parameter] public string tipoAlert { get; set; }
    [Parameter] public string testo { get; set; }
}