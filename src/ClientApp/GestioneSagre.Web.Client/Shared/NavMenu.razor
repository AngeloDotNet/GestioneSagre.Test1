@using MudBlazor

<MudNavMenu Class="mud-width-full">
    <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home Page</MudNavLink>
    <MudNavLink Disabled="isDashboardDisabled" Href="#" Icon="@Icons.Filled.Dashboard">Dashboard</MudNavLink>

    <MudDivider />

    <MudNavGroup Disabled="isAvvioDisabled" Title="Operazioni di avvio" Icon="@Icons.Filled.Start" @bind-Expanded="isAvvioExpanse">
        <MudNavLink Href="ConfigurazioneIniziale" Class="mudNavLink">Configurazione Iniziale</MudNavLink>
        @*<MudNavLink Href="ConfigurazioneImpostazioni" Class="mudNavLink">Configurazione Impostazioni</MudNavLink>
        <MudNavLink Href="ConfigurazioneLogo" Class="mudNavLink">Configurazione Logo</MudNavLink>*@
    </MudNavGroup>

    <MudNavGroup Disabled="isMagazzinoDisabled" Title="Magazzino" Icon="@Icons.Filled.Warehouse" @bind-Expanded="isMagazzinoExpanse">
        <MudNavLink Href="#" Class="mudNavLink">Configurazione Prodotti</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Configurazione Categorie</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Configurazione Menu</MudNavLink>
    </MudNavGroup>

    <MudDivider />

    <MudNavGroup Disabled="isCassaDisabled" Title="Cassa" Icon="@Icons.Filled.Store" @bind-Expanded="isCassaExpanse">
        <MudNavLink Href="#" Class="mudNavLink">Gestione prenotazioni</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Movimenti cassa</MudNavLink>
    </MudNavGroup>

    <MudNavGroup Disabled="isScontrinoDisabled" Title="Scontrini" Icon="@Icons.Filled.Receipt" @bind-Expanded="isScontrinoExpanse">
        <MudNavLink Href="#" Class="mudNavLink">Ristampa scontrino</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Cambia stato scontrino</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Cambia tipo scontrino</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Cambia tipo pagamento</MudNavLink>
    </MudNavGroup>

    <MudDivider />

    <MudNavGroup Disabled="isStampeDisabled" Title="Stampe" Icon="@Icons.Filled.Print" @bind-Expanded="isStampeExpanse">
        <MudNavLink Href="#" Class="mudNavLink">Contabilità cassa</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Stampa prenotazioni</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Stampa menu</MudNavLink>
    </MudNavGroup>

    <MudNavGroup Disabled="isStatisticheDisabled" Title="Statistiche" Icon="@Icons.Filled.QueryStats" @bind-Expanded="isStatisticheExpanse">
        <MudNavLink Href="#" Class="mudNavLink">Consumi giornata</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Consumi totali</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Riepilogo cassa</MudNavLink>
        <MudNavLink Href="#" Class="mudNavLink">Riepilogo incassi</MudNavLink>
    </MudNavGroup>

    <MudDivider />

    <MudNavLink Href="RichiediSupporto" Icon="@Icons.Filled.Support" Class="mudNavLink">Richiedi supporto</MudNavLink>
    <MudNavLink Href="InformazioniSoftware" Icon="@Icons.Outlined.Info" Class="mudNavLink">Informazioni software</MudNavLink>

    <MudDivider />

    <MudNavGroup Disabled="isAdminDisabled" Title="Amministrazione" Icon="@Icons.Filled.Security" @bind-Expanded="isAdminExpanse">
        <MudNavLink Href="#" Icon="@Icons.Filled.Groups" Class="mudNavLink">Utenti & Ruoli</MudNavLink>
    </MudNavGroup>
</MudNavMenu>

@code {
    private bool isAvvioExpanse = false;
    private bool isMagazzinoExpanse = false;
    private bool isCassaExpanse = false;
    private bool isScontrinoExpanse = false;
    private bool isStampeExpanse = false;
    private bool isStatisticheExpanse = false;
    private bool isAdminExpanse = false;

    private bool isAvvioDisabled = false;
    private bool isDashboardDisabled = true;
    private bool isMagazzinoDisabled = true;
    private bool isCassaDisabled = true;
    private bool isScontrinoDisabled = true;
    private bool isStampeDisabled = true;
    private bool isStatisticheDisabled = true;
    private bool isAdminDisabled = true;
}